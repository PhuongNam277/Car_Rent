<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#categorySelect").change(function () {
            var categoryId = $(this).val(); // Lay category id da chon
            $("#carSelect").html('<option selected> Loading... </option>') // Hien thi loading

            if(categoryId) {
                $.ajax({
                    url: "/Bookcar/GetCarsByCategory", // Goi controller
                    type: "GET",
                    data: {categoryId: categoryId},
                    success: function (data) {
                        $("#carSelect").html('<option selected value=""> Select Your Car Brand </option>');
                        $.each(data, function (index, car) {
                            $("#carSelect").append('<option value="' + car.carId + '">' + car.carName + '</option>' );
                        } ) ;
                    },
                    error: function () {
                        alert("Loi khi tai danh sach xe.");
                    }
                });
            }
            else {
                $("#carSelect").html('<option selected value="">Select Your Car Brand</option>'); // Reset nếu chưa chọn
            }

        })
        
    } )
</script>
