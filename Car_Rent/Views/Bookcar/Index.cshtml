                                                    @foreach (var c in Model.Categories)
                                                    {
                                                        var isSelected = (ViewBag.SelectedCategoryId != null && c.CategoryId == (int)ViewBag.SelectedCategoryId);
                                                        var selectedText = isSelected ? "selected" : "";
                                                        @Html.Raw($"<option value='{c.CategoryId}' {selectedText}>{c.CategoryName}</option>")
    
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <select id="carSelect" class="form-select" aria-label="Default select example">
                                                    <option selected>Select Your Car Brand</option>
                                                    @foreach(var car in Model.Cars)
                                                    {
                                                        var isSelected = (ViewBag.SelectedCarId != null && car.CarId == (int)ViewBag.SelectedCarId);
                                                        var selectedText = isSelected ? "selected" : "";
                                                        @Html.Raw($"<option value='{car.CarId}' {selectedText}>{car.CarName}</option>")
                                                    }

                                                </select>
                                            </div>
                                            <div class="col-12">
