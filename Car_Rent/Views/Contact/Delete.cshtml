@model Car_Rent.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Delete Contact</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this contact?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Project</dt>
        <dd class="col-sm-9">@Model.Project</dd>

        <dt class="col-sm-3">Subject</dt>
        <dd class="col-sm-9">@Model.Subject</dd>

        <dt class="col-sm-3">Message</dt>
        <dd class="col-sm-9">@Model.Message</dd>

        <dt class="col-sm-3">Submitted Date</dt>
        <dd class="col-sm-9">@Model.SubmittedDate</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
