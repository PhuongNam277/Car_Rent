@model IEnumerable<Car_Rent.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Roles</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th class="text-center" style="width: 200px;">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleName</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger btn-sm" onclick="return confirm('Do you want to delete this role?');">
                            <i class="bi bi-trash"></i> Deletes
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
