@model IEnumerable<Car_Rent.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Roles</h2>
    <a asp-action="Create" style="margin-top:12px" class="btn btn-success">Create New</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <thead class="table-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.RoleName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoleName</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-sm btn-info text-white">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-sm btn-danger" onclick="return confirm('Do you want to delete this role?');">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
