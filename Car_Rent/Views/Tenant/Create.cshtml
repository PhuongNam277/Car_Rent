@model Car_Rent.ViewModels.Tenant.TenantCreateViewModel
@{
    ViewData["Title"] = "Tạo tổ chức (Tenant)";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-3">Tạo tổ chức (Tenant)</h2>

    <form asp-action="Create" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên doanh nghiệp / cửa hàng</label>
            <input asp-for="Name" class="form-control" maxlength="200" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">Tạo & sử dụng ngay</button>
            <a href="@Model.ReturnUrl" class="btn btn-outline-secondary">Huỷ</a>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
