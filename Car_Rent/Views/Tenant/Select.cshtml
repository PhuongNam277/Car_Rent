@model Car_Rent.ViewModels.Tenant.TenantSelectViewModel
@{
    ViewData["Title"] = "Chọn tổ chức (Tenant)";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-3">Chọn tổ chức (Tenant)</h2>

    @if (!string.IsNullOrEmpty(Model.CurrentTenantId))
    {
        <div class="alert alert-info">
            Tenant hiện tại: <strong>@Model.Tenants.FirstOrDefault(t => t.TenantId.ToString() == Model.CurrentTenantId)?.Name</strong>
        </div>
    }

    <form asp-action="Switch" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

        <div class="list-group mb-3">
            @foreach (var t in Model.Tenants)
            {
                <label class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                        <input type="radio" name="tenantId" value="@t.TenantId" class="form-check-input me-2" />
                        <strong>@t.Name</strong>
                    </span>
                    <span class="badge bg-secondary">@t.Role</span>
                </label>
            }
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Tiếp tục</button>
            <a asp-action="Create" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">Tạo tổ chức mới</a>
        </div>
    </form>
</div>
