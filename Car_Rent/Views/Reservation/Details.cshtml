@model Car_Rent.Models.Reservation
@{
    ViewData["Title"] = "Reservation Details";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h2>Reservation Details</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Reservation Date</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.ReservationDate)</dd>

    <dt class="col-sm-3">Start Date</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.StartDate)</dd>

    <dt class="col-sm-3">End Date</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.EndDate)</dd>

    <dt class="col-sm-3">From City</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.FromCity)</dd>

    <dt class="col-sm-3">To City</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.ToCity)</dd>

    <dt class="col-sm-3">Total Price</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.TotalPrice)</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

    <dt class="col-sm-3">Car</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Car.CarId)</dd>

    <dt class="col-sm-3">User</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.User.UserId)</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReservationId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
