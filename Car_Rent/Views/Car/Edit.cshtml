@model Car_Rent.Models.Car

@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h2>Edit Car</h2>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="CarId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="CarName" class="form-label"></label>
        <input asp-for="CarName" class="form-control" />
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LicensePlate" class="form-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        <img src="@Model.ImageUrl" alt="Current Image" style="max-height: 200px;" />
    </div>


    <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>


    <div class="mb-3">
        <label asp-for="RentalPricePerDay" class="form-label"></label>
        <input asp-for="RentalPricePerDay" class="form-control" />
        <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="Available" selected="@(Model.Status == "Available")">Available</option>
            <option value="Rented" selected="@(Model.Status == "Rented")">Rented</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SeatNumber" class="form-label"></label>
        <input asp-for="SeatNumber" class="form-control" />
        <span asp-validation-for="SeatNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EnergyType" class="form-label"></label>
        <input asp-for="EnergyType" class="form-control" />
        <span asp-validation-for="EnergyType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SellDate" class="form-label"></label>
        <input asp-for="SellDate" class="form-control" type="text" />
        <span asp-validation-for="SellDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EngineType" class="form-label"></label>
        <input asp-for="EngineType" class="form-control" />
        <span asp-validation-for="EngineType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DistanceTraveled" class="form-label"></label>
        <input asp-for="DistanceTraveled" class="form-control" />
        <span asp-validation-for="DistanceTraveled" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TransmissionType" class="form-label"></label>
        <input asp-for="TransmissionType" class="form-control" />
        <span asp-validation-for="TransmissionType" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="AdminIndex" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
