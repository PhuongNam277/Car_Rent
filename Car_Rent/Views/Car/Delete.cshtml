@model Car_Rent.Models.Car

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Delete Car</h1>
                </div>
                <div class="card-body">
                    <h3 class="mb-4 text-danger">Are you sure you want to delete this?</h3>
                    <div class="mb-4">
                        <h4 class="fw-bold">Car Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.CarName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CarName)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Brand)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Model)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.LicensePlate)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.LicensePlate)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ImageUrl)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.RentalPricePerDay)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.RentalPricePerDay)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Status)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.SeatNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.SeatNumber)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.EnergyType)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnergyType)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.SellDate)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.SellDate)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.EngineType)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EngineType)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.DistanceTraveled)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DistanceTraveled)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.TransmissionType)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.TransmissionType)</dd>
                            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Category)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryId)</dd>
                        </dl>
                    </div>
                    <form asp-action="Delete" class="d-flex align-items-center gap-2">
                        <input type="hidden" asp-for="CarId" />
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="AdminIndex" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
