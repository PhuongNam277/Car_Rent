@model Car_Rent.ViewModels.Car.CarListItemVM
<div class="row g-0">
	<div class="col-md-6">
		<img src="@Model.ImageUrl" alt="@Model.CarName" class="img-fluid rounded-start w-100 h-100 object-fit-cover" />
	</div>
	<div class="col-md-6 p-4">
		<h4 class="mb-1">@Model.CarName</h4>
		<div class="text-muted mb-2">@Model.Brand • @Model.CategoryName</div>
		<div class="mb-3">
			@if (Model.SeatNumber.HasValue)
			{
				<span class="badge bg-light text-dark me-1">@Model.SeatNumber chỗ</span>
			}
			@if (!string.IsNullOrEmpty(Model.TransmissionType))
			{
				<span class="badge bg-light text-dark me-1">@Model.TransmissionType</span>
			}
			@if (!string.IsNullOrEmpty(Model.EnergyType))
			{
				<span class="badge bg-light text-dark me-1">@Model.EnergyType</span>
			}
			@if (!string.IsNullOrEmpty(Model.EngineType))
			{
				<span class="badge bg-light text-dark me-1">@Model.EngineType</span>
			}
		</div>
		<div class="h4 text-primary mb-3">$@Model.RentalPricePerDay<span class="fs-6 text-muted">/day</span></div>
		<div class="d-flex gap-2">
			@if (Model.Status == "Available")
			{
				<a class="btn btn-primary"
				   asp-controller="Bookcar" asp-action="Index"
				   asp-route-carId="@Model.CarId" asp-route-categoryId="@Model.CategoryId">
					Book Now
				</a>
			}
			else
			{
				<span class="btn btn-secondary disabled">Rented</span>
			}
			<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
		</div>
	</div>
</div>
