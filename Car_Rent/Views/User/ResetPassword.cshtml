@model Car_Rent.ViewModels.Profile.RequestResetPassword

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";

    var userId = (int)(ViewBag.UserId ?? 0);
    string? username = ViewBag.Username as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Reset Password</h2>
    <a asp-action="Index" class="btn btn-outline-secondary mt-2 mt-md-0">Back to List</a>
</div>

<form asp-action="ResetPassword" asp-controller="User" asp-route-id="@userId" method="post" class="row g-3 mb-3">
    @Html.AntiForgeryToken()

    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    @* Thông tin user (read-only) để đồng bộ style phần "filter" mẫu *@
    <div class="col-12 col-md-6">
        <label class="form-label mb-0 small text-muted">Username</label>
        <input class="form-control" value="@username" readonly />
    </div>

    <div class="w-100"></div>

    <div class="col-12">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="ConfirmNewPassword" class="form-label"></label>
        <input asp-for="ConfirmNewPassword" class="form-control" type="password" autocomplete="new-password" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-success">Reset Password</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
