@model Car_Rent.Models.Review

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3 text-danger">Delete Review</h1>

<div class="card border-danger">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this?</h5>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rating)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Rating)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Comment)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReviewDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ReviewDate)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.JobName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Car)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Car.CarId)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserId)</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="ReviewId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>
