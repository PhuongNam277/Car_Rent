@model IEnumerable<Car_Rent.Models.Blog>

@{
    ViewData["Title"] = "Blog Management";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Blogs</h2>
    <a asp-action="Create" style="margin-top:12px" class="btn btn-success">Create New</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().Content)</th>
            <th>@Html.DisplayNameFor(model => model.First().ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.First().PublishedDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
            <th>@Html.DisplayNameFor(model => model.First().Author)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td class="text-truncate" style="max-width: 420px;">@item.Content</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Blog Image" class="img-thumbnail" style="max-width:80px; max-height:60px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@item.PublishedDate</td>
                <td>@item.Status</td>
                <td>@item.Author?.Username</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.BlogId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-sm btn-info text-white">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BlogId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
