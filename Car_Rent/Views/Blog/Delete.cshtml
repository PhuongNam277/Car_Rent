@model Car_Rent.Models.Blog

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Delete Blog</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this blog?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Content</dt>
        <dd class="col-sm-9">@Model.Content</dd>

        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">@Model.ImageUrl</dd>

        <dt class="col-sm-3">Published Date</dt>
        <dd class="col-sm-9">@Model.PublishedDate</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Model.Author?.Username</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
