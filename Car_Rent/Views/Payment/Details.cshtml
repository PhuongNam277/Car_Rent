@model Car_Rent.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Payment Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Payment Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.PaymentDate)</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Amount)</dd>

            <dt class="col-sm-3">Payment Method</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.PaymentMethod)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

            <dt class="col-sm-3">Reservation</dt>
            <dd class="col-sm-9">
                @if (Model.Reservation != null)
                {
                    <span>#@Model.Reservation.ReservationId</span>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.PaymentId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
