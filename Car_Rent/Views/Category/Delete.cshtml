@model Car_Rent.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h2>Delete Category</h2>
<h5 class="text-danger">Are you sure you want to delete this?</h5>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CategoryName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
