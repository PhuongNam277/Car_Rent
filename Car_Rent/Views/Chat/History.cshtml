@model List<Car_Rent.Models.Conversation>
@{
    ViewData["Title"] = "Lịch sử Chat";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container py-4">
    <h3 class="mb-3">Lịch sử hỗ trợ</h3>

    <div class="list-group">
        @if (!Model.Any())
        {
            <p class="text-muted">Bạn chưa có cuộc hội thoại nào.</p>
        }
        else
        {
            @foreach (var conv in Model)
            {
                // Lấy tên người đối thoại (doanh nghiệp hoặc nhân viên cụ thể)
                var chatPartnerName = conv.Tenant?.Name ?? "Hỗ trợ";
                if (conv.Staff != null)
                {
                    chatPartnerName += $" ({conv.Staff.Username})";
                }

                var lastMessage = conv.Messages.FirstOrDefault();
                var lastMessagePreview = lastMessage != null ? lastMessage.Content : "Chưa có tin nhắn.";
                if (lastMessagePreview.Length > 50)
                {
                    lastMessagePreview = lastMessagePreview.Substring(0, 50) + "...";
                }
                @* Lấy timestamp gốc (dạng ISO string để JS dễ parse) *@
                var originalTimestamp = conv.LastMessageAt.ToString("o");
                var originalPreview = lastMessage != null ? lastMessage.Content : "Chưa có tin nhắn.";

                <a href="@Url.Action("Room", "Chat", new { id = conv.ConversationId })"
                   class="list-group-item list-group-item-action" id="conv-@conv.ConversationId"
                   data-original-preview="@originalPreview"
                   data-original-timestamp="@originalTimestamp">

                    <button type="button"
                            class="btn btn-sm btn-outline-danger btn-hide-conv position-absolute top-0 end-0 m-1"
                            title="Ẩn cuộc trò chuyện này"
                            data-conv-id="@conv.ConversationId"
                            style="z-index: 10;">
                        &times;
                    </button>

                    <div class="d-flex w-100 justify-content-between pe-4">
                        <h5 class="mb-1">
                            <span class="unread-dot"></span>
                            @chatPartnerName
                         </h5>
                        <small class="text-muted conversation-timestamp">@conv.LastMessageAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <p class="mb-1 text-muted conversation-preview">@lastMessagePreview</p>
                </a>
            }
        }
    </div>
</div>

@section Scripts {
@* Inject AntiForgeryToken để dùng trong fetch POST *@
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions { public string GetAntiXsrfToken() => Xsrf.GetAndStoreTokens(Context).RequestToken!; }

    <script src="~/js/user-unread-reload.js"></script>
}