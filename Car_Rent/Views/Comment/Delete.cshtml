@model Car_Rent.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Delete Comment</h4>
    </div>
    <div class="card-body">
        <p class="text-danger">Are you sure you want to delete this comment?</p>

        <dl class="row">
            <dt class="col-sm-3">Blog ID</dt>
            <dd class="col-sm-9">@Model.BlogId</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.AuthorName</dd>

            <dt class="col-sm-3">Content</dt>
            <dd class="col-sm-9">@Model.Content</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CommentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
